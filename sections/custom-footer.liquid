  <div class="footer-bottom">
    <div>
      {{ localization.country.name }} ({{ localization.country.currency.symbol }}) &nbsp;&nbsp; | &nbsp;&nbsp; {{ localization.language.endonym_name }}
    </div>
    <div>
      {{ shop.name }} &nbsp; • &nbsp; Powered by Shopify
    </div>
    <div class="payment-icons">
      <p>We accept</p>
      <img src="https://cdn.shopify.com/s/files/1/0648/5298/3875/files/Container_copy.webp?v=1754471033" alt="We accept" width="300px" height="30px">
    </div>
  </div>
</div>

<style>
/* Footer Strip - "Everyone Feel comfortable in cremy" */
.footer-strip {
    background-color: black;
    color: white;
    text-align: center;
    width: 100%;
    font-family: "TSTARPRO Headline", sans-serif;
    font-size: 20px;
    margin-top: 14px;
    margin-bottom: 14px;
    padding: 10px 0;
}

/* Mobile styles */
@media (max-width: 768px) {
    .footer-strip {
        font-size: 14px;
        margin-top: 14px;
        margin-bottom: 14px;
        padding: 15px 0;
    }
}

/* Footer styles */
.footer-wrapper {
    background-color: #f8f8f8;
    padding: 40px 20px 20px;
    font-family: Arial, sans-serif;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

.footer-col h4, .footer-col h5 {
    margin-bottom: 15px;
    color: #333;
}

.footer-col ul {
    list-style: none;
    padding: 0;
}

.footer-col ul li {
    margin-bottom: 8px;
}

.footer-col ul li a {
    color: #666;
    text-decoration: none;
}

.footer-col ul li a:hover {
    color: #333;
}

.footer-col.logo img {
    max-width: 100%;
    height: auto;
}

.footer-col p {
    color: #666;
    line-height: 1.5;
    margin-bottom: 15px;
}

.footer-col form {
    display: flex;
    margin-bottom: 20px;
}

.footer-col input[type="email"] {
    flex: 1;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px 0 0 4px;
}

.footer-col button {
    padding: 10px 15px;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
}

.social-icons {
    display: flex;
    gap: 10px;
}

.social-icons a {
    display: inline-block;
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #ddd;
    color: #666;
    font-size: 14px;
    flex-wrap: wrap;
    gap: 15px;
}

.payment-icons {
    display: flex;
    align-items: center;
    gap: 10px;
}

.payment-icons p {
    margin: 0;
}

@media (max-width: 768px) {
    .footer-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .footer-bottom {
        flex-direction: column;
        text-align: center;
        gap: 10px;
    }
    
    .footer-col form {
        flex-direction: column;
    }
    
    .footer-col input[type="email"] {
        border-radius: 4px;
        margin-bottom: 10px;
    }
    
    .footer-col button {
        border-radius: 4px;
    }
}
</style>

